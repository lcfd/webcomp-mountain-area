{
  "title": "Mountain Area Webcomponent",
  "description": "This web component shows all ski areas provided by the Open Data Hub.",
  "descriptionAbstract": "A widget that allows to easily integrate the map view of the ski areas and winter activities in South Tyrol or near a location.",
  "license": "AGPL-3.0-or-later",
  "copyrightHolders": [
    {
      "name": "NOI",
      "email": "info@noi.bz.it",
      "organization": "NOI S.p.A",
      "organizationUrl": "https://noi.bz.it"
    }
  ],
  "authors": [
    {
      "name": "Belka",
      "email": "hello@belkadigital.com",
      "organization": "Belka",
      "organizationUrl": "https://belkadigital.com/"
    }
  ],
  "image": "wcs-logo.png",
  "searchTags": ["mountain"],
  "dist": {
    "basePath": "dist",
    "files": ["webcomp-mountain-area.js"]
  },
  "configuration": {
    "tagName": "webcomp-mountain-area",
    "options": [
      {
        "key": "width",
        "type": "text",
        "label": "Width of the component as css property (es: '500px' or '100%')",
        "required": false,
        "options": {
          "default": "100%"
        }
      },
      {
        "key": "height",
        "type": "text",
        "label": "Height of the component as css property (es: '500px' or '100%')",
        "required": false,
        "options": {
          "default": "500px"
        }
      },
      {
        "key": "language",
        "type": "select",
        "label": "Two letter key for the language to be used, if omitted the widget will use the language of the browser (navigator.language[?s]) if supported. Fallback is `en`",
        "required": false,
        "options": {
          "values": ["en", "de", "it"],
          "default": "en"
        }
      },
      {
        "key": "fontFamily",
        "type": "text",
        "label": "Main font family",
        "required": false,
        "options": {
          "default": "Arial"
        }
      },
      {
        "key": "currentLocation",
        "type": "text",
        "label": "Coordinates of the current location in the following format: `{ 'lat': 46.31, 'lng': 11.26 }`",
        "required": true,
        "options": {
          "default": "{ 'lat': 46.31, 'lng': 11.26 }"
        }
      },
      {
        "key": "mapAttribution",
        "type": "text",
        "label": "Attribution text for the tiles, can contain html (without double-quotes)",
        "required": true,
        "options": {
          "default": "Map Tiles &copy; <a href='http://developer.here.com'>HERE</a>"
        }
      },
      {
        "key": "tiles-url",
        "type": "text",
        "label": "Url for the tiles, see https://leafletjs.com/reference-1.6.0.html#tilelayer",
        "required": true,
        "options": {
          "default": "https://1.base.maps.ls.hereapi.com/maptile/2.1/maptile/newest/normal.day/{z}/{x}/{y}/256/png8?apiKey="
        }
      },
      {
        "key": "filterRadius",
        "type": "text",
        "label": "The radius expressed in kilometers with which to filter events. Default value is 0.",
        "required": true,
        "options": {
          "default": "5"
        }
      },
      {
        "key": "disablePOIDirections",
        "type": "boolean",
        "label": "If set the road directions are hidden",
        "required": false,
        "options": {
          "default": ""
        }
      },
      {
        "key": "skiAreaFilter",
        "type": "text",
        "label": "Filter activities and areas by skiArea ids. Default is []",
        "required": false,
        "options": {
          "default": "[]"
        }
      },
      {
        "key": "disableMeteo",
        "type": "boolean",
        "label": "If set the meteo button is hidden",
        "required": false,
        "options": {
          "default": ""
        }
      },
      {
        "key": "activitiesFilter",
        "type": "text",
        "label": "If set, all the activities are filtered by the bitmask values in the array.",
        "required": false,
        "options": {
          "default": "[]"
        }
      }
    ]
  }
}
